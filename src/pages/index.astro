			<a href="https://github.com/csvtoolkit/" target="_blank" class="px-8 py-3 rounded-full bg-gray-100 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 text-gray-800 dark:text-gray-200 font-semibold shadow-lg hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors text-lg">Star on GitHub</a>
		</div>
	</section>

	<!-- Features Section -->
	<section class="w-full py-20 px-4">
		<div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 justify-items-center items-center">
			<div class="bg-white/80 dark:bg-gray-900/80 border border-gray-300 dark:border-gray-800 rounded-2xl p-8 flex flex-col items-center text-center shadow-lg w-full max-w-xs">
				<div class="text-3xl mb-4">âš¡</div>
				<h3 class="text-xl font-bold mb-2">Blazing Fast</h3>
				<p class="text-gray-600 dark:text-gray-400">Optimized for speed with native code and zero dependencies.</p>
			</div>
			<div class="bg-white/80 dark:bg-gray-900/80 border border-gray-300 dark:border-gray-800 rounded-2xl p-8 flex flex-col items-center text-center shadow-lg w-full max-w-xs">
				<div class="text-3xl mb-4">ðŸ’¾</div>
				<h3 class="text-xl font-bold mb-2">Memory Efficient</h3>
				<p class="text-gray-600 dark:text-gray-400">Stream huge CSV files with constant memory usage.</p>
			</div>
			<div class="bg-white/80 dark:bg-gray-900/80 border border-gray-300 dark:border-gray-800 rounded-2xl p-8 flex flex-col items-center text-center shadow-lg w-full max-w-xs">
				<div class="text-3xl mb-4">ðŸ”€</div>
				<h3 class="text-xl font-bold mb-2">Cross-Platform</h3>
				<p class="text-gray-600 dark:text-gray-400">Works on Linux, macOS, Windows, and more.</p>
			</div>
		</div>
	</section>

	<!-- Project Showcase Section -->
	<section class="w-full py-20 px-4 bg-gradient-to-b from-gray-100 to-gray-200 dark:from-gray-950 dark:to-gray-900">
		<div class="max-w-6xl mx-auto">
			<h2 class="text-3xl font-extrabold text-center mb-12">Our Projects</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8 justify-items-center items-stretch">
				{projects.map(project => (
					<div class={`bg-white/80 dark:bg-gray-900/80 border border-${project.color} rounded-2xl p-8 flex flex-col shadow-lg hover:scale-[1.03] transition-transform w-full max-w-md items-center text-center`}>
						<div class="flex items-center gap-2 mb-4 text-3xl justify-center">{project.icon}</div>
						<div class="font-bold text-lg mb-2">{project.name}</div>
						<div class="text-gray-700 dark:text-gray-300 mb-4">{project.shortDescription}</div>
						<ul class="text-gray-600 dark:text-gray-400 text-sm mb-6 space-y-1">
							{project.keyFeatures.map(feature => (
								<li>â€¢ {feature}</li>
							))}
						</ul>
						<a href={project.docsLink || project.link} target={project.docsLink ? '_self' : '_blank'} class={`mt-auto text-${project.color.replace('-700','-400')} hover:underline font-mono`}>
							{project.docsLink ? 'View Docs â†’' : 'View on GitHub â†’'}
						</a>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Sponsor Section (merged pitch and callout) -->
	<section class="w-full py-12 px-4 flex flex-col items-center text-center bg-gradient-to-b from-gray-200 to-gray-100 dark:from-gray-900 dark:to-gray-950">
		<div class="max-w-3xl mx-auto mb-6">
			<h2 class="text-2xl font-bold mb-2 text-purple-600 dark:text-purple-300">Support CSVToolkit</h2>
			<p class="text-lg text-gray-700 dark:text-gray-300 mb-4">Help us build faster, greener, and more reliable CSV tools for everyoneâ€”developers and companies alike.</p>
		</div>
		<a href="https://github.com/sponsors/achrafAa" class="inline-block px-8 py-3 rounded-full bg-gradient-to-r from-cyan-500 to-purple-500 text-white font-semibold shadow-lg hover:from-cyan-400 hover:to-purple-400 transition-colors text-lg">Become a Sponsor</a>
	</section>

	<style>
	@keyframes gradient-x {
		0%, 100% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
	}
	.animate-gradient-x {
		background-size: 200% 200%;
		animation: gradient-x 4s ease-in-out infinite;
	}
	</style>
</Layout>
